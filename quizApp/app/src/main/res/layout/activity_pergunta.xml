<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1"
    android:orientation="horizontal"
    android:background="@android:color/holo_blue_bright"
    android:layout_height="550dp"
    android:layout_width="383dp">

    <Button
        android:text="Conclave"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:id="@+id/button1id"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_below="@+id/perguntaid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/black"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Votação Clérica"
        android:layout_height="wrap_content"
        android:id="@+id/button3id"
        android:layout_below="@+id/button1id"
        android:layout_alignLeft="@+id/button1id"
        android:layout_alignStart="@+id/button1id"
        android:layout_marginTop="89dp"
        android:background="@android:color/black"
        android:textColor="@android:color/background_light"
        android:layout_width="125dp" />

    <Button
        android:text="Votalção Clreicaniana"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3id"
        android:layout_alignLeft="@+id/button2id"
        android:layout_alignStart="@+id/button2id"
        android:layout_width="125dp"
        android:background="@android:color/black"
        android:textColor="@android:color/background_light"
        android:id="@+id/button4id" />

    <Button
        android:text="Cardus"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2id"
        android:background="@android:color/black"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/button1id"
        android:layout_alignBottom="@+id/button1id"
        android:layout_toRightOf="@+id/button1id"
        android:layout_toEndOf="@+id/button1id"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:text="Pergunta 1"
        android:layout_height="wrap_content"
        android:id="@+id/perguntaid"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>